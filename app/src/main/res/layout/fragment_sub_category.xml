<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context="com.example.thanhnh.wallpaperhdanime.ui.fragment.SubCategoryFragment">

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:background="@color/dark_blue"
        android:fontFamily="@font/dancingscriptregular"
        android:gravity="center"
        android:text="OnePiece"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_25" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerSubCate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvCategoryName"
        android:background="@color/dark_blue"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
