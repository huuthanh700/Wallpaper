<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical">

    <com.gjiazhe.panoramaimageview.PanoramaImageView
        android:id="@+id/imgWallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/item_image"
        app:piv_enablePanoramaMode="true"
        app:piv_show_scrollbar="true"
        app:piv_invertScrollDirection="false"/>

    <TextView
        android:id="@+id/tvImageName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:background="@color/transparent_dark_blue"
        android:gravity="center"
        android:text="OnePiece Ace"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_dark_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDownload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Download"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_17" />

        <View
            android:layout_width="@dimen/common_size_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_size_8"
            android:layout_marginTop="@dimen/common_size_8"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvSetWallpaper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Set"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_17" />
    </LinearLayout>
</RelativeLayout>