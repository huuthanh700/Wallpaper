<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_130"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_size_1">

    <RelativeLayout
        android:id="@+id/layoutItemCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/category_op">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_dark_blue3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dancingscriptregular"
                android:gravity="center"
                android:text="One Piece"
                android:textColor="@color/white"
                android:textSize="@dimen/common_size_25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCategoryName"
                android:layout_marginTop="@dimen/common_size_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvToTalImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="330"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_size_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="image background"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_size_10" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>