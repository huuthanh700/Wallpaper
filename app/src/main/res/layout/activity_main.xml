<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context="com.example.thanhnh.wallpaperhdanime.ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_130">

        <ImageView
            android:id="@+id/img_background_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_130"
            android:background="@drawable/background_wallpaper" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_80"
            android:background="@color/transparent_dark_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_80"
            android:background="@color/transparent_dark_blue4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_90"
            android:background="@color/transparent_dark_blue3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_100"
            android:background="@color/transparent_dark_blue3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_110"
            android:background="@color/transparent_dark_blue2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_120"
            android:background="@color/transparent_dark_blue2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_130"
            android:gravity="center"
            android:paddingLeft="@dimen/common_size_10"
            android:text="Anime Wallpaper HD"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:layout_below="@id/layout_header"
        android:background="@color/dark_blue"
        app:tabIndicatorHeight="@dimen/common_size_1"></android.support.design.widget.TabLayout>

    <View
        android:id="@+id/viewTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_5"
        android:layout_below="@id/tabLayout"
        android:background="@color/dark_blue" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewTab">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </FrameLayout>

</RelativeLayout>
